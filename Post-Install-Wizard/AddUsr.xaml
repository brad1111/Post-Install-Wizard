<Page x:Class="Post_Install_Wizard.AddUsr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Post_Install_Wizard"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddUsr">

    <Grid>
        <TextBox x:Name="textBox" Height="22" Margin="10,40.5,10,0" TextWrapping="Wrap" Text="User" VerticalAlignment="Top" TextChanged="textBox_TextChanged"/>
        <Label x:Name="label" Content="Please enter a valid username/password:" Height="30.5" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Add _User" HorizontalAlignment="Right" Margin="0,0,10,10" Width="84" Click="button_Click" Height="26" VerticalAlignment="Bottom"/>
        <PasswordBox x:Name="passwordBox" Height="22" Margin="10,67.5,10,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
