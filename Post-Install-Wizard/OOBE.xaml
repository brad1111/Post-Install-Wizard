<Page x:Class="Post_Install_Wizard.OOBE"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Post_Install_Wizard"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="OOBE">

    <Grid>
        <Button x:Name="button" Content="Enter _OOBE" VerticalAlignment="Bottom" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Click="button_Click"/>
        <ComboBox x:Name="comboBox" VerticalAlignment="Top" Margin="10,35.96,10,0">
            <ComboBoxItem x:Name="Quit" Content="Quit"/>
            <ComboBoxItem x:Name="Reboot" Content="Reboot"/>
            <ComboBoxItem x:Name="Shutdown" Content="Shutdown"/>
        </ComboBox>
        <CheckBox x:Name="checkBox" Content="_Generalize (Removes Drivers, for creating image)" VerticalAlignment="Top" Margin="10,62.92,0,0" HorizontalAlignment="Left" Width="280" Checked="checkBox_Checked"/>
        <Label x:Name="label" Content="Shutdown Options" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>

    </Grid>
</Page>
